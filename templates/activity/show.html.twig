{% extends 'base.html.twig' %}

{% block title %}{{ activity.name }} {{ parent() }}{% endblock %}

{% block breadcrumbs %}
	{{ parent() }}
	<li class="breadcrumb-item">
		{% if (is_granted("ROLE_PRESCRIPTOR")) %}
			<a href=" {{ path('activity_list_prescriptor') }}">Activitats per prescriure</a>
		{% elseif (is_granted("ROLE_EDITOR")) %}
			<a href=" {{ path('activity_list_editor') }}">Activitats de l'entitat</a>
		{% endif %}
	</li>
	<li class="breadcrumb-item active">{{activity.name}}</li>
{% endblock %}

